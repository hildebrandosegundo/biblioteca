            estante: $('#estanteinput').val(),
            prateleira: $('#prateleirainput').val(),
            editora_id: $('#editorainput').val().split("-")[0],
            author_id: $('#autorinput').val().split("-")[0]
        },
        success: function (data) {
            console.log(data);
            alert(data.message);
        }
    });
});


