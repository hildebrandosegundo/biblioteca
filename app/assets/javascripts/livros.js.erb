$(document).on('click', '#button1idlivro', function (e) {
    e.preventDefault();
    e.stopPropagation();
        $.ajax({
            type: "POST",
            dataType: "json",
            url: "/livros/new",
            data: {
                titulo: $('#tituloinput').val(),
                ano: $('#anoinput').val(),
                estante: $('#estanteinput').val(),
                prateleira: $('#prateleirainput').val(),
                editora: $('#editorainput').val().split("-")[0]
            },
            success: function (data) {
                console.log(data);
                alert(data.message);
            }
        });
});
    $('#livros').DataTable({
        responsive: true,
        sPaginationType: "full_numbers"
    });


