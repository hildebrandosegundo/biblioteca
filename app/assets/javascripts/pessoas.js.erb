$(document).on('click', '#buttonCadastrar', function (e) {
    e.preventDefault();
    e.stopPropagation();
    if ($('#passwordinput').val()!=$('#password2input').val()){
      alert("A sua senha est√° diferente, por favor verifique sua senha!");
    }
    else {
        $.ajax({
            type: "POST",
            url: "/pessoas",
            data: {
                nome: $('#inputnome').val(),
                matricula: $('#inputmatricula').val(),
                cpf: $('#inputCPF').val(),
                login: $('#inputlogin').val(),
                senha: $('#passwordinput').val(),
                status: $("#status option:selected").val()
            },
            success: function (data) {
                console.log(data);
                alert(data.message);
            }
        });
    }
});