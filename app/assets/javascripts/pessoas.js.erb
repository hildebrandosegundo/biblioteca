$(document).on('click', '#buttonCadastrar', function (e) {
    e.preventDefault();
    e.stopPropagation();
    $.ajax({
        type: "POST",
        url: "/pessoas",
        data: {nome: $('#inputnome').val(),
               matricula: $('#inputmatricula').val(),
               cpf: $('#inputCPF').val(),
               login: $('#inputlogin').val(),
               senha: $('#passwordinput').val(),
               status: $('#radios option:selected').val()
               },
        success: function (data) {
            console.log(data);
            alert(data.message);
        }
    });
});