<div id="modaleditlivro" class="modal fade" data-width="800" style="display: none;">
  <div class="modal-header">
    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">×</button>
    <h4 class="modal-title">Editar Livro</h4>
  </div>
  <%= render "livros/form_livro" %>
  <div class="container">
    <div class="row">
      <!-- Button (Double) -->
      <div class="form-group">
        <label class="col-md-4 control-label" for="button1id"></label>
        <div class="col-md-8">
          <button id="button1updatelivro" name="button1id" class="btn btn-success">Atualizar Dados</button>
          <button id="button2idlivro" name="button2id" class="btn btn-danger">Apagar Tudo</button>
        </div>
      </div>
    </div>
  </div>
  <div class="modal-footer">
    <button type="button" data-dismiss="modal" class="btn btn-success">OK</button>
  </div>
</div>
<div id="modalpessoalivro" class="modal fade" data-width="800" style="display: none;">
  <div class="modal-header">
    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">×</button>
    <h4 class="modal-title">Emprestar livro</h4>
  </div>
  <table id="tablepessoaslivro" cellspacing="0" width="100%" class="table table-striped table-bordered display responsive no-wrap" data-source="<%= pessoas_url(format: "json") %>">
    <thead>
    <tr>
      <th>ID</th>
      <th>Matricula</th>
      <th>CPF</th>
      <th>Nome</th>
    </tr>
    </thead>
    <tbody>

    </tbody>
  </table>
  <div class="modal-footer">
    <button type="button" id="buttonalocapeslivro" data-dismiss="modal" class="btn btn-success">OK</button>
  </div>
</div>
<div class="container">
  <div class="row">
    <form class="form-horizontal">
      <fieldset>
        <div class="col-md-12">
          <table id="livros" cellspacing="0" width="100%" class="table table-striped table-bordered display responsive no-wrap">
            <thead>
            <tr>
              <th>ID</th>
              <th>Titulo</th>
              <th>Ano</th>
              <th>Prateleira</th>
              <th>Estante</th>
              <th>Autor</th>
              <th>Editora</th>
              <th>Opção</th>
            </tr>
            </thead>
            <tbody>
            <% @livros.each do |livro| %>
                <tr>
                  <td><%= livro.id %></td>
                  <td><%= livro.titulo %></td>
                  <td><%= livro.ano %></td>
                  <td><%= livro.prateleira %></td>
                  <td><%= livro.estante %></td>
                  <td><%= livro.author.nome_author %></td>
                  <td><%= livro.editora.nome_editora %></td>
                  <td>
                    <button type="button" id="buttoninfolivro" class="btn btn-info glyphicon glyphicon-info-sign"></button>
                    <div class="btn-group" role="group" aria-label="...">
                      <button type="button" id="buttonalocuser" class="btn btn-success glyphicon glyphicon-user"></button>
                      <button type="button" id="buttoneditlivro" class="btn btn-warning glyphicon glyphicon-edit"></button>
                      <button type="button" id="buttonexcluirlivro" class="btn btn-danger glyphicon glyphicon-trash"></button>
                    </div>
                  </td>
                </tr>
            <% end %>
            </tbody>
          </table>
        </div>
      </fieldset>
    </form>
  </div>
</div>