<form class="form-horizontal">
  <fieldset>

    <!-- Form Name -->
    <legend>Cadastrar Usuário</legend>

    <!-- Text input-->
    <div class="form-group">
      <label class="col-md-4 control-label" for="inputnome">Nome:</label>
      <div class="col-md-5">
        <input id="inputnome" name="inputnome" type="text" placeholder="" class="form-control input-md" required="">

      </div>
    </div>

    <!-- Text input-->
    <div class="form-group">
      <label class="col-md-4 control-label" for="inputmatricula">Matricula</label>
      <div class="col-md-4">
        <input id="inputmatricula" name="inputmatricula" type="text" placeholder="" class="form-control input-md" required="">
        <span class="help-block">insira a matricula já existente do usuário</span>
      </div>
    </div>

    <!-- Text input-->
    <div class="form-group">
      <label class="col-md-4 control-label" for="inputCPF">CPF</label>
      <div class="col-md-4">
        <input id="inputCPF" name="inputCPF" type="text" placeholder="somente números" class="form-control input-md" required="">

      </div>
    </div>

    <!-- Text input-->
    <div class="form-group">
      <label class="col-md-4 control-label" for="inputlogin">Login</label>
      <div class="col-md-4">
        <input id="inputlogin" name="inputlogin" type="text" placeholder="" class="form-control input-md" required="">
        <span class="help-block">Nome ou apelido para entrar no sistema</span>
      </div>
    </div>

    <!-- Password input-->
    <div class="form-group">
      <label class="col-md-4 control-label" for="passwordinput">Senha</label>
      <div class="col-md-4">
        <input id="passwordinput" name="passwordinput" type="password" placeholder="Senha do usuário" class="form-control input-md" required="">

      </div>
    </div>

    <!-- Multiple Radios (inline) -->
    <div class="form-group">
      <label class="col-md-4 control-label" for="radios">Tipo</label>
      <div class="col-md-4">
        <label class="radio-inline" for="radios">
          <input type="radio" name="status" id="radios" value="0" checked="checked">
          Administrador
        </label>
        <label class="radio-inline" for="radios">
          <input type="radio" name="status" id="radios" value="1">
          Usuário
        </label>
      </div>
    </div>

    <!-- Button (Double) -->
    <div class="form-group">
      <label class="col-md-4 control-label" for="buttonCadastrar"></label>
      <div class="col-md-8">
        <button id="buttonCadastrar" name="buttonCadastrar" class="btn btn-success">Cadastrar</button>
        <button id="buttonCacela" name="buttonCacela" class="btn btn-danger">Cancelar</button>
      </div>
    </div>

  </fieldset>
</form>
