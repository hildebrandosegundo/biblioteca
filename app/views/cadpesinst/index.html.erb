<div id="modalinstituicao" class="modal fade" data-width="760" style="display: none;">
  <div class="modal-header">
    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">×</button>
    <h4 class="modal-title">Instituições</h4>
  </div>
  <table id="tableinstituicao" cellspacing="0" width="100%" class="table table-striped table-bordered display responsive no-wrap" data-source="<%= instituicaos_url(format: "json") %>">
    <thead>
    <tr>
      <th>ID</th>
      <th>Instituição</th>
    </tr>
    </thead>
    <tbody>

    </tbody>
  </table>
  <div class="modal-footer">
    <button type="button" data-dismiss="modal" class="btn btn-success">OK</button>
  </div>
</div>
<div class="section alert-warning">
  <div class="container">
    <div class="row">
      <div class="col-md-6">
        <form class="form-horizontal">
          <fieldset>
            <!-- Form Name -->
            <legend>Cadastro Pessoa</legend>
            <!-- Text input-->
            <div class="form-group">
              <label class="col-md-4 control-label" for="nameinput">Nome</label>
              <div class="col-md-8">
                <input id="inputnome" name="nameinput" type="text" placeholder="Nome" class="form-control input-md" required="">
                <span class="help-block">Ajuda</span>
              </div>
            </div>
            <!-- Text input-->
            <div class="form-group">
              <label class="col-md-4 control-label" for="matinput">Matricula</label>
              <div class="col-md-4">
                <input id="inputmatricula" name="matinput" type="text" placeholder="Matricula" class="form-control input-md" required="">
                <span class="help-block">Ajuda</span>
              </div>
            </div>
            <!-- Text input-->
            <div class="form-group">
              <label class="col-md-4 control-label" for="cpfinput">CPF</label>
              <div class="col-md-4">
                <input id="inputCPF" name="cpfinput" type="text" placeholder="CPF" class="form-control input-md" required="">
                <span class="help-block">Ajuda</span>
              </div>
            </div>
            <!-- Select Basic -->
            <div class="form-group">
              <label class="col-md-4 control-label" for="status">Tipo</label>
              <div class="col-md-4">
                <select id="status" name="status" class="form-control">
                  <option value="1">Administrador</option>
                  <option value="2">Usuário</option>
                </select>
              </div>
            </div>
            <!-- Text input-->
            <div class="form-group">
              <label class="col-md-4 control-label" for="logininput">Login</label>
              <div class="col-md-4">
                <input id="inputlogin" name="logininput" type="text" placeholder="Login" class="form-control input-md" required="">
                <span class="help-block">Ajuda</span>
              </div>
            </div>
            <!-- Text input-->
            <div class="form-group">
              <label class="col-md-4 control-label" for="senhainput">Senha</label>
              <div class="col-md-4">
                <input id="passwordinput" name="senhainput" type="text" placeholder="Senha" class="form-control input-md" required="">
              </div>
            </div>
            <!-- Text input-->
            <div class="form-group">
              <label class="col-md-4 control-label" for="senha2input">Repetir Senha</label>
              <div class="col-md-4">
                <input id="password2input" name="senha2input" type="text" placeholder="Senha" class="form-control input-md" required="">
                <span class="help-block">Ajuda</span>
              </div>
            </div>
            <!-- Text input-->
            <div class="form-group">
              <label class="col-md-4 control-label" for="instituicaoinput">Instituição</label>

              <div class="col-md-4">
                <input id="instituicaoinput" name="instituicaoinput" type="text" placeholder="Instituição" class="form-control input-md" disabled required="">
                <span class="help-block">Ajuda</span>
              </div>
              <div class="col-md-4">
                <button id="addinstituicao" name="addinstituicao" class="btn btn-primary glyphicon glyphicon-plus"></button>
              </div>
            </div>
            <!-- Button (Double) -->
            <div class="form-group">
              <label class="col-md-4 control-label" for="button1id"></label>
              <div class="col-md-8">
                <button id="buttonCadastrar" name="button1id" class="btn btn-success">Enviar Dados</button>
                <button id="button2idpessoa" name="button2id" class="btn btn-danger">Apagar Tudo</button>
              </div>
            </div>
          </fieldset>
        </form>
      </div>
      <div class="col-md-6">
        <form class="form-horizontal">
          <fieldset>
            <!-- Form Name -->
            <legend>Cadastro Instituição</legend>
            <!-- Text input-->
            <div class="form-group">
              <label class="col-md-4 control-label" for="nameinput">Nome</label>
